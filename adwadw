  <script>
    setTimeout(() => {
      document.getElementById("loginBox").style.display = "block";
    }, 2500);

    function toggleMode() {
      document.body.classList.toggle("dark-mode");
      localStorage.setItem("theme", document.body.classList.contains("dark-mode") ? "dark" : "light");
    }

    window.onload = () => {
      if (localStorage.getItem("theme") === "dark") {
        document.body.classList.add("dark-mode");
      }
    };

    function login() {
      const username = document.getElementById("username").value.trim();
      const password = document.getElementById("password").value.trim();
      const errorMsg = document.getElementById("errorMsg");

      if (!username || !password) {
        errorMsg.textContent = "Ÿäÿ±ÿ¨Ÿâ ÿ™ÿπÿ®ÿ¶ÿ© ÿßÿ≥ŸÖ ÿßŸÑŸÖÿ≥ÿ™ÿÆÿØŸÖ ŸàŸÉŸÑŸÖÿ© ÿßŸÑŸÖÿ±Ÿàÿ±";
        return;
      }

      const users = {
        "teacher1": { password: "1234", role: "teacher", name: "ÿ£ÿ≥ÿ™ÿßÿ∞" },
        "agent1":   { password: "1234", role: "agent", name: "ŸàŸÉŸäŸÑ" },
        "manager1": { password: "1234", role: "manager", name: "ŸÖÿØŸäÿ±" }
      };

      const user = users[username];

      if (user && user.password === password) {
        localStorage.setItem("teacherName", user.name);

        if (user.role === "teacher") {
          window.location.href = "ta.html";
        } else if (user.role === "agent") {
          window.location.href = "agent.html";
        } else if (user.role === "manager") {
          window.location.href = "manager.html";
        }
      } else {
        errorMsg.textContent = "ÿ®ŸäÿßŸÜÿßÿ™ ÿßŸÑÿØÿÆŸàŸÑ ÿ∫Ÿäÿ± ÿµÿ≠Ÿäÿ≠ÿ©";
      }
    }

        function toggleDarkMode() {
      document.body.classList.toggle("dark-mode");
      localStorage.setItem("theme", document.body.classList.contains("dark-mode") ? "dark" : "light");
    }

    window.onload = () => {
      if (localStorage.getItem("theme") === "dark") {
